# Auto detect text files and perform LF normalization
* text=auto

# Explicitly declare text files that should have LF line endings
*.md text eol=lf
*.txt text eol=lf
*.json text eol=lf
*.jsonl text eol=lf
*.py text eol=lf
*.sh text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.ipynb text eol=lf
*.template text eol=lf

# Configuration files
.gitignore text eol=lf
.env* text eol=lf
*.workspace text eol=lf

# Binary files
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.avif binary
*.webp binary
*.ico binary
*.safetensors binary
*.idx binary
*.pack binary
*.rev binary